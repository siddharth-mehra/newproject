{
    "extends": "../../packages/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
        "baseUrl": ".",
        "paths": {
          "@newproject/*": ["../../packages/*/src"]
        },
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "noEmit": false,
        "incremental": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "types"],
    "exclude": ["node_modules", "dist"],
    "references": [
        { "path": "../../packages/zod" }
    ]
}
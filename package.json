{
  "name": "@siddharthmehra/monoreporoot",
  "version": "1.0.0",
  "description": "A new monorepo setup using pnpm and turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  
  "workspaces":[
    "apps/*",
    "packages/*"
  ],
  "files": [
  "bin",
  "packages",
  "README.md",
  "turbo.json"
  ],
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cli",
    "monorepo",
    "turborepo",
    "pnpm"
  ],
  "author": "Siddharth Mehra",
  "license": "MIT"
}
